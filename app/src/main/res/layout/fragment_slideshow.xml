<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participantes do Grupo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Avatar 1 -->
    <LinearLayout
        android:id="@+id/avatar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Imagem do Avatar -->
        <ImageView
            android:id="@+id/avatarImage1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/leoyuuki"
            android:contentDescription="leoyuuki"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp" />

        <!-- Layout para Nome e RM -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/avatarName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leonardo Yuuki"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/avatarRm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM: 550373"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Avatar 2 -->
    <LinearLayout
        android:id="@+id/avatar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/avatar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Imagem do Avatar -->
        <ImageView
            android:id="@+id/avatarImage2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/daniel"
            android:contentDescription="Daniel Delfin"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp" />

        <!-- Layout para Nome e RM -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/avatarName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniel Delfin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/avatarRm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM: 552184"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Avatar 3 -->
    <LinearLayout
        android:id="@+id/avatar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/avatar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Imagem do Avatar -->
        <ImageView
            android:id="@+id/avatarImage3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/macirander"
            android:contentDescription="macirander"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp" />

        <!-- Layout para Nome e RM -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/avatarName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macirander Miranda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/avatarRm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM: 551416"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
